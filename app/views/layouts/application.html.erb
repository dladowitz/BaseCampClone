<!DOCTYPE html>
<html>
<head>
  <title>BaseCampClone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="span8">
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>

    <% end %>

    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>
  </div>


  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">

        <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>

        <!-- Be sure to leave the brand out there if you want it shown -->
        <a class="brand" href="#">Summer Camp</a>

        <!-- Everything you want hidden at 940px or less, place within here -->
        <div class="nav-collapse">
          <!-- .nav, .navbar-search, .navbar-form, etc -->
          <ul class="nav">
            <li><%= link_to "Home", "/users/sign_in" %></li>
            <li><%= link_to "Other", new_user_session_path %></li>
            <li><%= link_to "Other Other", "/users/sign_in" %></li>
          </ul>
        </div>

      </div>
    </div>
  </div>






<div class="container">
  <div class="row">
    <div class="span8">

      <div id="account">
        <% if current_user %>
          <span>Welcome, <%= current_user.email %></span>
          <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path %>
        <% end %>
      </div>


      <%= yield %>
    </div>
    <div class="span3">
      <h2>Sidebar</h2>
    </div>
  </div>
</div>

</body>
</html>
